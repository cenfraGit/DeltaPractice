<Window x:Class="mainApp.Views.Dialogs.CreatePracticeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:mainApp.ViewModels.Windows"
        Title="{Binding WindowTitle}" Height="400" Width="500" ResizeMode="CanMinimize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Practice name:"/>
            <TextBox Grid.Column="1" Margin="10,0,0,0" Text="{Binding PracticeTitle}"/>
        </Grid>

        <DockPanel Grid.Row="1" Margin="10" LastChildFill="True">
            <StackPanel DockPanel.Dock="Right" Margin="5,0,0,0" Orientation="Vertical">
                <Button Content="&#xE710;" FontFamily="Segoe MDL2 Assets" Foreground="Green"
                        FontSize="13" Width="30" Height="30"
                        Margin="0,0,0,4"/>
            </StackPanel>
            
            <ListBox DockPanel.Dock="Left" SelectionMode="Single" ItemsSource="{Binding ProblemsCollection}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Margin" Value="3,3,3,0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:ProblemViewModel}">
                        <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                            
                            <Button DockPanel.Dock="Right" Content="&#xE8BB;" 
                                    FontFamily="Segoe MDL2 Assets" FontSize="13" 
                                    Foreground="Red" Command="{Binding CreatorRemoveCommand}" 
                                    Width="30" Height="30"/>
                            <Button DockPanel.Dock="Right" Content="&#xE713;" 
                                    FontFamily="Segoe MDL2 Assets" FontSize="13"
                                    Width="30" Height="30" Margin="5,0" Command="{Binding CreatorEditCommand}" />
                            <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center" 
                                    Margin="10,0" Text="{Binding Name}"/>
                            
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </DockPanel>
        
        <DockPanel Grid.Row="2" Margin="10,0,10,10" LastChildFill="False">
            <Button DockPanel.Dock="Right" Width="60" Content="Save"/>
            <Button DockPanel.Dock="Right" Width="60" Margin="0,0,5,0" Content="Cancel"/>
        </DockPanel>

    </Grid>

    <!--<StackPanel Margin="20">
        <TextBlock Text="Item Name:"/>
        <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="Save" Margin="0,20,0,0"/>
    </StackPanel>-->
</Window>