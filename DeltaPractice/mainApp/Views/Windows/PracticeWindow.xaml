<Window x:Class="mainApp.Views.Windows.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mainApp.ViewModels.Windows"
        mc:Ignorable="d"
        Title="ProblemWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="{x:Type StatusBar}">
            <Setter Property="Background" Value="#335ea8"/>
            <Setter Property="Foreground" Value="#85ceeb"/>
            <Setter Property="Padding" Value="5,0"/>

            <Style.Triggers>

                <DataTrigger Binding="{Binding ProblemStatus}" Value="{x:Static local:AnswerStatus.Correct}">
                    <Setter Property="Background" Value="Green"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>

                <DataTrigger Binding="{Binding ProblemStatus}" Value="{x:Static local:AnswerStatus.Incorrect}">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>

            </Style.Triggers>
            
        </Style>

        <Style TargetType="{x:Type TextBox}">

            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />

            <Style.Triggers>

                <DataTrigger Binding="{Binding AnswerStatus}" Value="{x:Static local:AnswerStatus.Correct}">
                    <Setter Property="BorderBrush" Value="Green" />
                    <Setter Property="BorderThickness" Value="2" />
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>

                <DataTrigger Binding="{Binding AnswerStatus}" Value="{x:Static local:AnswerStatus.Incorrect}">
                    <Setter Property="BorderBrush" Value="Red" />
                    <Setter Property="BorderThickness" Value="2" />
                </DataTrigger>

            </Style.Triggers>

        </Style>
    </Window.Resources>
    
    
    

    <DockPanel LastChildFill="True" VerticalAlignment="Stretch">

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="Correct:" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SBCorrect}" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="Incorrect:" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="{Binding SBIncorrect}" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem>

            </StatusBarItem>
            <!--<StatusBarItem DockPanel.Dock="Right">
        <ProgressBar Width="100" Height="15" Value="50" />
    </StatusBarItem>-->
        </StatusBar>

        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">

            <StackPanel Margin="20">

                <ItemsControl ItemsSource="{Binding ContextViewModels}" IsTabStop="False">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type local:ContextTextViewModel}">
                            <StackPanel Margin="0,10,0,10">
                                <TextBlock Text="{Binding Value}" FontWeight="Normal"/>
                            </StackPanel>
                        </DataTemplate>

                        <DataTemplate DataType="{x:Type local:ContextImageViewModel}">
                            <StackPanel Margin="0,10,0,10">
                                <Image Source="{Binding Image}" Stretch="Uniform" MaxWidth="600"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.Resources>

                </ItemsControl>

                <ItemsControl ItemsSource="{Binding QuestionViewModels}" IsTabStop="False">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type local:QuestionTextBoxViewModel}">
                            <StackPanel Margin="0,10,0,10">

                                <ItemsControl ItemsSource="{Binding QuestionItems}" IsTabStop="False">

                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.Resources>
                                        <DataTemplate DataType="{x:Type local:QuestionTextBoxViewModelTextPart}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Text}" FontWeight="Normal"/>
                                            </StackPanel>
                                        </DataTemplate>

                                        <DataTemplate DataType="{x:Type local:QuestionTextBoxViewModelBoxInput}">
                                            <StackPanel>
                                                <TextBox Width="70" Text="{Binding Text}">
                                                </TextBox>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.Resources>
                                </ItemsControl>

                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.Resources>

                </ItemsControl>

                <Button Content="Submit" Command="{Binding CheckCurrentProblemCommand}" 
                        Margin="0,20,0,0" Width="150" HorizontalAlignment="Center" IsTabStop="False"/>
                <Button Content="Next Problem" Command="{Binding LoadNextProblemCommand}" 
                        Margin="0,20,0,0" Width="150" HorizontalAlignment="Center" IsTabStop="False" 
                        Visibility="{Binding ButtonNextProblemVisibility}"/>

            </StackPanel>
        </ScrollViewer>


        
    </DockPanel>

    
</Window>
